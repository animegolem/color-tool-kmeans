{
  "name": "color-abstract-electron",
  "version": "0.2.0",
  "description": "Electron shell for the color abstraction desktop app",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "electron:dev": "electron-vite dev",
    "electron:bundle": "electron-vite build",
    "electron:build": "npm run electron:bundle && electron-builder",
    "test": "node --test"
  },
  "engines": {
    "node": ">=18.20.8"
  },
  "dependencies": {
    "electron": "^33.2.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
    "@types/electron": "^1.6.10",
    "@types/node": "^22.5.4",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.8"
  },
  "build": {
    "appId": "com.color.abstract",
    "productName": "Color Abstract",
    "files": [
      "dist/main/**",
      "dist/preload/**",
      "dist/renderer/**",
      "package.json"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "dist/main/index.js"
    },
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
